# Home Assistant connection
HA_BASE_URL=http://homeassistant.local:8123
HA_TOKEN=YOUR_LONG_LIVED_ACCESS_TOKEN
HA_POWER_SENSOR_ENTITY=sensor.total_power
# Optionally specify multiple sensors (comma-separated, max 10)
# HA_POWER_SENSORS=sensor.phase1_power,sensor.phase2_power,sensor.phase3_power

# Polling and segmentation
POLL_INTERVAL_SECONDS=5
RELATIVE_CHANGE_THRESHOLD=0.2
SEGMENT_PRE_SAMPLES=15
SEGMENT_POST_SAMPLES=15
MIN_LABELS_PER_APPLIANCE=5
STATUS_TTL_SECONDS=300
UNLABELED_TTL_SECONDS=7200
CLEANUP_INTERVAL_SECONDS=300

# App
APP_TITLE=HA Power Classifier
DATA_DIR=/data

# MQTT output (Home Assistant discovery)
MQTT_ENABLED=false
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_BASE_TOPIC=ha_power_classifier
MQTT_DISCOVERY_PREFIX=homeassistant
MQTT_CLIENT_ID=ha-power-classifier
MQTT_DEVICE_ID=ha_power_classifier
